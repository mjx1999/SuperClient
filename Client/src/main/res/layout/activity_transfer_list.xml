<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <!--         BillCode,BillDate,BillStateName,RevDate,ValidDate,TraderName,
            LinkMan,PaymethodName,Amount,ForwardAmt,OpName,EmpName,Checkor;-->

            <TextView
                android:id="@+id/BillCode"
                style="@style/billItemStyle"
                android:layout_width="180dp"
                android:text="单据编号" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/BillDate"
                style="@style/billItemStyle"
                android:layout_width="150dp"
                android:text="开单日期" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/BillStateName"
                style="@style/billItemStyle"
                android:layout_width="70dp"
                android:text="单据状态" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/RevDate"
                style="@style/billItemStyle"
                android:layout_width="150dp"
                android:text="交货日期" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/ValidDate"
                style="@style/billItemStyle"
                android:layout_width="150dp"
                android:text="失效日期" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/TraderName"
                style="@style/billItemStyle"
                android:layout_width="100dp"
                android:text="往来日期" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/LinkMan"
                style="@style/billItemStyle"
                android:layout_width="50dp"
                android:text="联系人" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/ShipTypeName"
                style="@style/billItemStyle"
                android:layout_width="80dp"
                android:text="送货方式" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/PaymethodName"
                style="@style/billItemStyle"
                android:layout_width="100dp"
                android:text="付款方式" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />
            <!--234234-->
            <TextView
                android:id="@+id/Amount"
                style="@style/billItemStyle"
                android:layout_width="100dp"
                android:gravity="center_vertical|end"
                android:text="总金额" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/ForwardAmt"
                style="@style/billItemStyle"
                android:layout_width="100dp"
                android:gravity="center_vertical|end"
                android:text="预付款" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/OpName"
                style="@style/billItemStyle"
                android:layout_width="65dp"
                android:paddingLeft="5dp"
                android:text="操作员" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/CheckorName"
                style="@style/billItemStyle"
                android:layout_width="65dp"
                android:text="审核人" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/EmpName"
                style="@style/billItemStyle"
                android:layout_width="65dp"
                android:paddingLeft="5dp"
                android:text="业务员" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/DepartmentName"
                style="@style/billItemStyle"
                android:layout_width="65dp"
                android:text="部门" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/Closed"
                style="@style/billItemStyle"
                android:layout_width="40dp"
                android:text="终止" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="?android:attr/listDivider" />

        <ListView
            android:id="@id/listView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" />
    </LinearLayout>

</HorizontalScrollView>