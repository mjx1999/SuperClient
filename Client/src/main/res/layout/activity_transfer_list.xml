<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <!--         BillCode,BillDate,BillStateName,RevDate,ValidDate,TraderName,
            LinkMan,PaymethodName,Amount,ForwardAmt,OpName,EmpName,Checkor;-->

            <TextView
                android:id="@+id/BillCode"
                style="@style/billItemStyle"
                android:layout_width="180dp"
                android:text="单据编号" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/BillDate"
                style="@style/billItemStyle"
                android:layout_width="150dp"
                android:text="开单日期" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/BillKindName"
                style="@style/billItemStyle"
                android:layout_width="70dp"
                android:text="单据类型" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/BillStateName"
                style="@style/billItemStyle"
                android:layout_width="70dp"
                android:text="单据状态" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/InStoreName"
                style="@style/billItemStyle"
                android:layout_width="70dp"
                android:text="调入仓库" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/OutStore"
                style="@style/billItemStyle"
                android:layout_width="70dp"
                android:text="调出仓库" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />


            <TextView
                android:id="@+id/Amount"
                style="@style/billItemStyle"
                android:layout_width="120dp"
                android:gravity="center_vertical|end"
                android:text="金额" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />


            <TextView
                android:id="@+id/OpName"
                style="@style/billItemStyle"
                android:layout_width="100dp"
                android:paddingLeft="5dp"
                android:text="操作员" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/CheckorName"
                style="@style/billItemStyle"
                android:layout_width="100dp"
                android:text="审核人" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="?android:attr/listDivider" />

        <ListView
            android:id="@id/listView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" />
    </LinearLayout>

</HorizontalScrollView>