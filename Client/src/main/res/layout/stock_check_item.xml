<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="horizontal">
    <!--         BillCode, BillDate, BillStateName,
                Amount,StoreName,
                OpName, CheckorName, EmpName, DepartmentName,IOTypeName;-->

    <TextView
        android:id="@+id/BillCode"
        style="@style/billItemStyle"
        android:layout_width="180dp" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />
    <TextView
        android:id="@+id/BillDate"
        style="@style/billItemStyle"
        android:layout_width="150dp" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />
    <TextView
        android:id="@+id/BillStateName"
        style="@style/billItemStyle"
        android:layout_width="70dp" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />  <TextView
        android:id="@+id/StoreName"
        style="@style/billItemStyle"
        android:layout_width="70dp" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />
     <!--234234-->
    <TextView
        android:id="@+id/Amount"
        style="@style/billItemStyle"
        android:layout_width="100dp"
        android:gravity="center_vertical|end" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />
    <TextView
        android:paddingLeft="5dp"
        android:id="@+id/OpName"
        style="@style/billItemStyle"
        android:layout_width="65dp" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />
    <TextView
        android:id="@+id/CheckorName"
        style="@style/billItemStyle"
        android:layout_width="65dp" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />
    <TextView
        android:paddingLeft="5dp"
        android:id="@+id/EmpName"
        style="@style/billItemStyle"
        android:layout_width="65dp" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />
    <TextView
        android:id="@+id/DepartmentName"
        style="@style/billItemStyle"
        android:layout_width="65dp" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />   <TextView
        android:id="@+id/IOTypeName"
        style="@style/billItemStyle"
        android:layout_width="65dp" />
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="?android:attr/listDivider"
        />

</LinearLayout>